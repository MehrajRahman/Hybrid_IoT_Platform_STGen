{
    "name": "Event-Driven Burst Traffic",
    "description": "Idle sensors that burst on event detection (fire alarms, intrusion)",
    "protocol": "YOUR_PROTOCOL",
    "mode": "active",
    "server_ip": "127.0.0.1",
    "server_port": 5000,
    "num_clients": 30,
    "duration": 10,
    "sensors": ["motion", "camera", "smoke", "door"],
    "traffic_pattern": {
        "motion": {"rate_hz": 0.01, "burst": true, "burst_rate_hz": 15},
        "camera": {"rate_hz": 0.01, "burst": true, "burst_rate_hz": 30},
        "smoke": {"rate_hz": 0.01, "burst": true, "burst_rate_hz": 10},
        "door": {"rate_hz": 0.1, "burst": false}
    },
    "events": [
        {"time_sec": 10, "sensor": "motion", "duration_sec": 5},
        {"time_sec": 30, "sensor": "camera", "duration_sec": 10},
        {"time_sec": 45, "sensor": "smoke", "duration_sec": 15}
    ],
    "failure_injection": {
        "packet_loss": 0.0,
        "client_crashes": []
    }
}