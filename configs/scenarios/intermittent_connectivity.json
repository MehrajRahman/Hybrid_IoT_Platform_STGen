{
    "name": "Intermittent Network Connectivity",
    "description": "Clients randomly disconnect and reconnect (mobile scenarios)",
    "protocol": "YOUR_PROTOCOL",
    "mode": "active",
    "server_ip": "127.0.0.1",
    "server_port": 5000,
    "num_clients": 20,
    "duration": 10,
    "sensors": ["gps", "temp", "motion"],
    "traffic_pattern": {
        "gps": {"rate_hz": 0.2, "burst": false},
        "temp": {"rate_hz": 0.5, "burst": false},
        "motion": {"rate_hz": 1.0, "burst": false}
    },
    "failure_injection": {
        "packet_loss": 0.1,  
        "client_crashes": [15, 30, 45, 60, 75], 
        "network_partition": {"start_sec": 40, "duration_sec": 10}
    }
}