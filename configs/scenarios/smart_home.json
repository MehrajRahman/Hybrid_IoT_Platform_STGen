{
    "name": "Smart Home Monitoring",
    "description": "Typical smart home with mixed sensor types",
    "protocol": "YOUR_PROTOCOL",
    "mode": "active",
    "server_ip": "127.0.0.1",
    "server_port": 5000,
    "num_clients": 15,
    "duration": 10,
    "sensors": ["temp", "motion", "device", "humidity"],
    "traffic_pattern": {
        "temp": {"rate_hz": 0.1, "burst": false},      
        "motion": {"rate_hz": 0.5, "burst": true},             
        "device": {"rate_hz": 0.05, "burst": false},   
        "humidity": {"rate_hz": 0.2, "burst": false}   
    },
    "failure_injection": {
        "packet_loss": 0.0,
        "client_crashes": []
    }
}